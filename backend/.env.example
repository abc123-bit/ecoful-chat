# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/knowledge_base

# Redis配置
REDIS_URL=redis://localhost:6379/0

# MinIO对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=knowledge-base
MINIO_PUBLIC_ENDPOINT=http://localhost:9000
MINIO_SECURE=false

# 百炼平台API配置
BAILIAN_API_KEY=your_bailian_api_key
BAILIAN_ENDPOINT=https://dashscope.aliyuncs.com/api/v1
BAILIAN_EMBEDDING_MODEL=text-embedding-v1
BAILIAN_CHAT_MODEL=qwen-max

# Chroma向量数据库配置
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./chroma_data

# JWT配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 应用配置
APP_NAME=Knowledge Base API
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]