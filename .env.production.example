# 生产环境配置模板
# 复制此文件为 .env.production 并填写实际值

# ====== Dify API 配置 ======
# Dify API 服务器地址（必填）
VITE_DIFY_API_URL=https://api.dify.ai/v1

# Dify API 密钥（必填）
# 从 Dify 控制台获取
VITE_DIFY_API_KEY=app-your-api-key-here

# ====== 应用配置 ======
# 应用标题
VITE_APP_TITLE=Vue Dify Chat

# 应用版本
VITE_APP_VERSION=1.0.0

# 应用描述
VITE_APP_DESCRIPTION=基于 Vue 3 的 AI 聊天界面

# 环境类型
NODE_ENV=production

# ====== 功能开关 ======
# 是否启用演示模式（当API密钥为空时）
VITE_ENABLE_DEMO_MODE=false

# 是否启用调试模式
VITE_DEBUG_MODE=false

# 是否启用性能监控
VITE_ENABLE_ANALYTICS=true

# ====== 安全配置 ======
# API 请求超时时间（毫秒）
VITE_API_TIMEOUT=30000

# 最大重试次数
VITE_MAX_RETRIES=3

# ====== UI 配置 ======
# 默认主题
VITE_DEFAULT_THEME=light

# 是否启用暗色模式
VITE_ENABLE_DARK_MODE=true

# 消息最大长度
VITE_MAX_MESSAGE_LENGTH=4000

# 历史消息显示数量
VITE_MAX_HISTORY_MESSAGES=100

# ====== 高级配置 ======
# CDN 地址（可选）
VITE_CDN_URL=

# 静态资源路径
VITE_PUBLIC_PATH=/

# 是否启用 PWA
VITE_ENABLE_PWA=false

# 错误上报地址（可选）
VITE_ERROR_REPORT_URL=

# ====== 部署配置 ======
# 应用部署域名
VITE_APP_DOMAIN=your-domain.com

# 是否启用 HTTPS
VITE_ENABLE_HTTPS=true

# API 代理前缀（如果需要代理）
VITE_API_PROXY_PREFIX=/api

# ====== 监控配置 ======
# Google Analytics ID（可选）
VITE_GA_ID=

# 百度统计 ID（可选）
VITE_BAIDU_ANALYTICS_ID=

# Sentry DSN（可选）
VITE_SENTRY_DSN=

# ====== 社交分享配置 ======
# 分享标题
VITE_SHARE_TITLE=Vue Dify Chat - AI 聊天助手

# 分享描述
VITE_SHARE_DESCRIPTION=强大的 AI 聊天界面，基于 Dify 平台构建

# 分享图片
VITE_SHARE_IMAGE=/og-image.png